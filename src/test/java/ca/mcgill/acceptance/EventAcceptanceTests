import org.junit.jupiter.api.*;
import static org.junit.jupiter.api.Assertions.*;

public class EventAcceptanceTests {

    @Test
    public void adminDeletesEvent_eventNoLongerDisplayedInList() {
        // Arrange
        Event event = new Event();
        Admin admin = new Admin();
        event.create();
        List<Event> events = event.getAllEvents();
        assertTrue(events.contains(event));

        // Act
        admin.login();
        admin.navigateToEventManagementPage();
        admin.selectEvent(event);
        admin.deleteEvent();

        // Assert
        events = event.getAllEvents();
        assertFalse(events.contains(event));
    }

    @Test
    public void adminDeletesEventTime_eventNoLongerHasTimeAssociated() {
        // Arrange
        Event event = new Event();
        Admin admin = new Admin();
        event.create();
        event.setTime("10:00 AM");
        assertTrue(event.getTime() != null);

        // Act
        admin.login();
        admin.navigateToEventManagementPage();
        admin.selectEvent(event);
        admin.deleteEventTime();

        // Assert
        assertNull(event.getTime());
    }

    @Test
    public void adminDeletesEventCapacity_eventNoLongerHasCapacityAssociated() {
        // Arrange
        Event event = new Event();
        Admin admin = new Admin();
        event.create();
        event.setCapacity(100);
        assertTrue(event.getCapacity() != null);

        // Act
        admin.login();
        admin.navigateToEventManagementPage();
        admin.selectEvent(event);
        admin.deleteEventCapacity();

        // Assert
        assertNull(event.getCapacity());
    }

    @Test
    public void attendeeViewsEvent_eventDisplayedInList() {
        // Arrange
        Event event = new Event();
        Attendee attendee = new Attendee();
        event.create();

        // Act
        attendee.login();
        attendee.navigateToEventsPage();
        List<Event> events = attendee.getAllEvents();

        // Assert
        assertTrue(events.contains(event));
    }
}

